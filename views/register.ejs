<%- include('partials/header') %>
<div class="form-container">```````
    <h2>Register</h2>
    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form method="post">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" value="<%= locals.username || '' %>" required />
        </div>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" id="lastName" class="form-control" value="<%= locals.name || '' %>" required />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" id="email" class="form-control" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" value="<%= locals.email || '' %>" required />
        </div>
        <div class="form-group">
            <label for="role">Role</label>
             &nbsp;<input type="radio" id="role" name="role" value="librarian" onclick= "PasswordVisibilty()" required> Librarian
             <input type="radio" id="role" name="role" value="user" onclick= "PasswordVisibilty()" required> User<br>
        </div>
        <div class="form-group">
            <label for="mobile">Mobile (format: xxxx-xxx-xxx):</label>
            <input type="tel" name="mobile" id="mobile" class="form-control" maxlength="12" pattern="^\d{4}-\d{3}-\d{3}$" required />
        </div>
        <div class="form-group" id="passBlock" style="display:none">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
            <a href="/login" class="btn btn-link" >Already Member</a>
        </div>
    </form>
</div>
 <script>
     function PasswordVisibilty()
     {
        if (document.getElementById('role').checked) {
         if(document.getElementById('role').value == "librarian")
            document.getElementById('passBlock').style.display= 'block';
        }
        else
          document.getElementById('passBlock').style.display= 'none';
     }
  </script>
<%- include('partials/footer') %>
